@model ModelEF.Model.Product
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Chi Tiết Sản Phẩm</h2>

<div class="card-body">
    <hr />
    <dl class="dl-horizontal">
        <div class="row">
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        Mã sách
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IDProduct)
                    </dd>
                    <dt>
                        Thể loại sách
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IDCategory)
                    </dd>
                    <dt>
                        Tên sách
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.NameProduct)
                    </dd>
                    <dt>
                        Tên không giấu
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.MetaName)
                    </dd>
                    <dt>
                        Số lượng
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>
                    <dt>
                        Giá bán
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UnitCost) đ
                    </dd>
                    <dt>
                        Tác giả
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Author)
                    </dd>
                    <dt>
                        Mô tả
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt>
                        Tình trạng
                    </dt>
                    <dd>
                        @*@Html.DisplayFor(model => model.Status)*@
                        @Html.DropDownListFor(modelItem => modelItem.Status, new[] {
                       new SelectListItem { Text = "Còn hàng", Value = "True" },
                       new SelectListItem { Text = "Hết hàng", Value = "False" } },
                       new { @disabled = "disabled" })
                    </dd>

                </dl>
            </div>
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        Ảnh sản phẩm
                    </dt>
                    <dd>
                        <ul>
                            <li> <img style="height: 100%; object-fit: cover" src="~/Assets/Client/images/books/sach/@Model.Image" /></li>
                            <li> @Html.DisplayFor(model => model.Image) </li>
                        </ul>
                    </dd>

                </dl>
            </div>
        </div>

    </dl>
    <button class="mb-2 mr-2 btn-transition btn btn-success">
        @Html.ActionLink("Chỉnh sửa", "Sua", new { id = Model.IDProduct })
    </button>
    <ul></ul>
    <button class="mb-2 mr-2 btn-transition btn btn-outline-info">
        @Html.ActionLink("Quay lại danh sách", "Index", new { @class = "mb-2 mr-2 btn btn-success" })
    </button>
</div>


